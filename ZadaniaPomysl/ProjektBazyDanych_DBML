Table users {
  id int [pk, increment]
  email varchar(100) [not null, unique]
  password varchar(100) [not null]
  phone_number varchar(20)
  created_at datetime [not null]
}

Table addresses {
  id int [pk, increment]
  user_id int [not null, ref: > users.id]
  street varchar(100) [not null]
  city varchar(100) [not null]
  postal_code varchar(20) [not null]
  country varchar(100) [not null]
}

Table categories {
  id int [pk, increment]
  name varchar(100) [not null, unique]
  description text
  parent_category_id int [ref: > categories.id]
}

Table listings {
  id int [pk, increment]
  title varchar(255) [not null]
  description text
  price decimal(10,2) [not null]
  currency varchar(3) [not null]
  user_id int [not null, ref: > users.id]
  category_id int [not null, ref: > categories.id]
  status enum('active', 'pending', 'sold') [not null, default: 'active']
  created_at datetime [not null]
  updated_at datetime
}

Table images {
  id int [pk, increment]
  url varchar(255) [not null]
  listing_id int [not null, ref: > listings.id]
}

Table reviews {
  id int [pk, increment]
  reviewer_id int [not null, ref: > users.id]
  reviewed_user_id int [not null, ref: > users.id]
  listing_id int [not null, ref: > listings.id]
  rating int [not null] 
  review_text text
  created_at datetime [not null]
}
